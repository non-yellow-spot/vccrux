# Description: Dynamic menu
# URL:         https://github.com/chinarulezzz-de/dmenu-4.5-chinarulezzz
# Maintainer:  Alexandr Savca, drop at chinarulezzz dot fun
# Depends on:  xorg-libxft xorg-libxinerama

name=dmenu-4.5-chinarulezzz-scm
version=$(date +%Y%m%d)
release=1

download_git() {
	if [[ -d $PKGMK_SOURCE_DIR/$name ]]; then
		git -C $PKGMK_SOURCE_DIR/$name fetch --depth=1
		git -C $PKGMK_SOURCE_DIR/$name clean -f
		git -C $PKGMK_SOURCE_DIR/$name reset --hard origin/$2
	else
		git -C $PKGMK_SOURCE_DIR clone --depth=1 $1 -b $2 $name
	fi

	cp -r $PKGMK_SOURCE_DIR/$name $PKGMK_WORK_DIR/src/$name
}

build() {
	download_git https://github.com/chinarulezzz-de/${name/-scm} master
	cd $name

	make PREFIX=/usr DESTDIR=$PKG install
}
