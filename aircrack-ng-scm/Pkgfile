# Description: Assess WiFi network security (branch:master)
# URL:         https://github.com/aircrack-ng/aircrack-ng
# Maintainer:  Alexandr Savca, alexandrsavca89 at gmail dot com
# Depends on:  ethtool hwloc libnl libpcap libpcre libxml2 openssl sqlite3 xorg-libpciaccess

name=aircrack-ng-scm
version=$(date +%Y%m%d)
release=2
source=(0001-airodump-ng.c-add-manufacturer-column-to-the-client-.patch)

download_git() {
	if [[ -d $PKGMK_SOURCE_DIR/$name ]]; then
		git -C $PKGMK_SOURCE_DIR/$name fetch --depth=1
		git -C $PKGMK_SOURCE_DIR/$name clean -f
		git -C $PKGMK_SOURCE_DIR/$name reset --hard origin/$2
	else
		git -C $PKGMK_SOURCE_DIR clone --depth=1 $1 -b $2 $name
	fi

	cp -r $PKGMK_SOURCE_DIR/$name $PKGMK_WORK_DIR/src/$name
}

build() {
	download_git https://github.com/${name/-scm}/${name/-scm} master
	cd $name

	patch -p1 < $SRC/0001-airodump-ng.c-add-manufacturer-column-to-the-client-.patch

	NOCONFIGURE=1 ./autogen.sh
	./configure \
		--prefix=/usr \
		--libexecdir=/usr/lib

	make V=1
	make DESTDIR=$PKG install
}
