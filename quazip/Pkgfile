# Description: Qt/C++ wrapper for Minizip
# URL:         https://stachenov.github.io/quazip/
# Maintainer:  Stamatin Cristina, dear dot volgk at gmail dot com
# Depends on:  icu qt5 zstd

name=quazip
version=1.1
release=2
source=(https://github.com/stachenov/$name/archive/v$version/$name-$version.tar.gz)

build() {
	cd $name-$version

	mkdir build
	cd build

	cmake ..                                               \
		-DCMAKE_INSTALL_PREFIX=/usr                    \
		-DCMAKE_BUILD_TYPE=Release                     \
		-DCMAKE_CXX_FLAGS_RELEASE="$CXXFLAGS -DNDEBUG" \
		-DCMAKE_C_FLAGS_RELEASE="$CFLAGS -DNDEBUG"     \

	make VERBOSE=1
	make DESTDIR=$PKG install
}
