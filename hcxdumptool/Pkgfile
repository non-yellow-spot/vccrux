# Description:  Capture packets from wlan devices
# URL:          https://github.com/ZerBea/hcxdumptool
# Maintainer:   Alexandr Savca, drop at chinarulezzz dot fun

name=hcxdumptool
version=6.0.7
release=1
source=(https://github.com/ZerBea/$name/archive/$version/$name-$version.tar.gz)

build() {
	cd $name-$version

	make
	make INSTALLDIR=$PKG/usr/bin install

	install -Dm644 manpages/{hcxdumptool,hcxpioff}.1 \
		-t $PKG/usr/share/man/man1/
}
