# Description: Web caching proxy
# URL:         http://www.pps.jussieu.fr/~jch/software/polipo/
# Maintainer:  Alexandr Savca, alexandrsavca89 at gmail dot com
# Depends on:  texinfo
#
name=polipo
version=1.1.1
release=1
source=(http://www.pps.univ-paris-diderot.fr/~jch/software/files/$name/$name-$version.tar.gz
	config
	polipo.rc)

build() {
	cd $name-$version

	make PREFIX=/usr "CDEBUGFLAGS=${CFLAGS}" all
	make install PREFIX=/usr MANDIR=/usr/share/man INFODIR=/usr/share/info "TARGET=$PKG"

	install -Dm0755 $SRC/config -t $PKG/etc/polipo/
	install -Dm0755 $SRC/polipo.rc $PKG/etc/rc.d/polipo

	# remove junk
	rm -rf $PKG/usr/share/info
	rm -rf $PKG/usr/share/polipo/www/doc
}
