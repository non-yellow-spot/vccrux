# Description:  Simple MP3 player client for MTP based devices
# URL:          https://gmtp.sourceforge.io/
# Maintainer:   Alexandr Savca, drop at chinarulezzz dot fun
# Depends on:   libvorbis flac libmtp libid3tag desktop-file-utils gtk3

name=gmtp
version=1.3.11
release=1
source=(http://sourceforge.net/projects/gmtp/files/gMTP-$version/gmtp-$version.tar.gz)

build() {
	cd $name-$version

	./configure                         \
		--prefix=/usr               \
		--with-gtk3                 \
		--disable-schema-compile    \
		--disable-schema-install    \
		--disable-nls

	make
	make DESTDIR=$PKG install
}
