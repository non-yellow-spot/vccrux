# Description:  HigSafely and cleanly create closures via string eval
# URL:          https://metacpan.org/pod/Eval::Closure
# Maintainer:   Alexandr Savca, drop at chinarulezzz dot fun
# Depends on:   p5-glib

name=p5-eval-closure
version=0.14
release=1
source=(https://cpan.metacpan.org/authors/id/D/DO/DOY/Eval-Closure-${version}.tar.gz)

build() {
	cd Eval-Closure-$version

	perl Makefile.PL

	make OPTIMIZE="$CFLAGS"
	make install DESTDIR=$PKG

	find $PKG  -name perllocal.pod  \
		-o -name "*.bs"         \
		-o -name .packlist      \
		-o -name autosplit.ix   \
	| xargs rm -f

	find $PKG -depth -type d -empty -delete
}
