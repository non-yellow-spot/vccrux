# Description:  Perl bindings for pkgconfig
# URL:          https://metacpan.org/pod/ExtUtils::PkgConfig
# Maintainer:   Alexandr Savca, alexandr dot savca89 at gmail dot com
# Depends on:   p5-xml-parser

name=p5-extutils-pkgconfig
version=1.16
release=1
source=(http://www.cpan.org/modules/by-module/ExtUtils/ExtUtils-PkgConfig-$version.tar.gz)

build() {
	cd ExtUtils-PkgConfig-$version

	perl Makefile.PL

	make OPTIMIZE="$CFLAGS"
	make install DESTDIR=$PKG

	find $PKG -name perllocal.pod   \
		-o -name "*.bs"         \
		-o -name .packlist      \
		-o -name autosplit.ix   \
	| xargs rm -f

	find $PKG -depth -type d -empty -delete
}
