# Description: IPv6 attack toolkit
# URL:         https://github.com/vanhauser-thc/thc-ipv6
# Maintainer:  Alexandr Savca, alexandrsavca89 at gmail dot com
# Depends on:  libpcap libnetfilter_queue bindutils

name=thc-ipv6
version=3.6.ba9fe25
_commit=ba9fe25a7275748a82a1c3f31a98f5be0cde4d10
release=1
source=(https://github.com/vanhauser-thc/$name/archive/$_commit/$name-$_commit.zip)

build() {
	cd $name-$_commit

	sed -i 's@CFLAGS+=-O3 -march=native@CFLAGS+=@' Makefile

	make
	make PREFIX=/usr DESTDIR=$PKG install

	(cd contrib;
	make
	make PREFIX=/usr DESTDIR=$PKG install)
}
