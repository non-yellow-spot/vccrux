# Description: Exploit common IEEE 802.11 protocol weaknesses
# URL:         https://github.com/charlesxsh/mdk3-master
# Maintainer:  Alexandr Savca, alexandrsavca89 at gmail dot com
# Depends on:  git libnl libpcap

name=mdk4-scm
version=$(date +%Y%m%d)
release=2

download_git() {
	if [[ -d $PKGMK_SOURCE_DIR/$name ]]; then
		git -C $PKGMK_SOURCE_DIR/$name fetch --depth=1
		git -C $PKGMK_SOURCE_DIR/$name clean -f
		git -C $PKGMK_SOURCE_DIR/$name reset --hard origin/$2
	else
		git -C $PKGMK_SOURCE_DIR clone --depth=1 $1 -b $2 $name
	fi

	cp -r $PKGMK_SOURCE_DIR/$name $PKGMK_WORK_DIR/src/$name
}

build() {
	download_git https://github.com/aircrack-ng/${name/-scm} master
	cd $name

	# remove optimization flag
	sed -i 's/ -g -O3 -Wall -Wextra / -Wall -Wextra /' \
		src/Makefile src/attacks/Makefile

	EXTRAFLAGS="-I.. -I/usr/include/libnl3 -DCONFIG_LIBNL30 -DCONFIG_LIBNL"

	make CFLAGS="$CFLAGS $EXTRAFLAGS" -j1 # fix parallel build
	make -C src install PREFIX=$PKG/usr

	# install man page manually
	install -Dm0644 man/mdk4.1 $PKG/usr/share/man/man8/mdk4.8
}
