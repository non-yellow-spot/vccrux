# Description: Extra collection of scripts for CRUX maintaining
# URL:         https://github.com/non-yellow-spot/prt-utils-extra
# Maintainer:  Alexandr Savca, alexandrsavca89 at gmail dot com

name=prt-utils-extra
version=d713c5c
_commit=d713c5c5c65a95ea215355a99e8a22c5248d820e
release=1
source=(https://github.com/non-yellow-spot/$name/archive/$_commit/$name-$_commit.tar.gz)

build() {
	cd $name-$_commit

	install -Dm755 pkgdisown         -t $PKG/usr/sbin
	install -Dm644 pkgdisown.conf    -t $PKG/etc

	install -Dm755 prtchkmdep        -t $PKG/usr/bin
	install -Dm755 prtchkrevdep      -t $PKG/usr/bin

	install -Dm755 prtchkflagz       -t $PKG/usr/bin
	install -Dm644 prtchkflagz.conf  -t $PKG/etc

	install -Dm755 prtlint           -t $PKG/usr/bin

	install -Dm755 pkgmk_cflagz      -t $PKG/usr/bin
	ln -sf /usr/bin/pkgmk_cflagz $PKG/usr/bin/pkgmk_cxxflagz
}
