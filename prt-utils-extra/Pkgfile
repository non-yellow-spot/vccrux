# Description:  Extra collection of scripts for CRUX maintaining
# URL:          https://github.com/non-yellow-spot/prt-utils-extra
# Maintainer:   Alexandr Savca, drop at chinarulezzz dot fun

name=prt-utils-extra
version=7205d1c
_commit=7205d1cf40a0694c96c2001a83bffc636e56a920
release=1
source=(https://github.com/non-yellow-spot/$name/archive/$_commit/$name-$_commit.zip)

build() {
	cd $name-$_commit

	install -Dm755 pkgdisown       -t $PKG/usr/sbin
	install -Dm644 pkgdisown.conf  -t $PKG/etc

	install -Dm755 prtchkmdep      -t $PKG/usr/bin
}
