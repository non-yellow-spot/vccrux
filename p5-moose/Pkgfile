# Description:  A postmodern object system
# URL:          https://metacpan.org/pod/Moose
# Maintainer:   Alexandr Savca, drop at chinarulezzz dot fun
# Depends on:   p5-glib

name=p5-moose
version=2.2013
release=1
source=(https://cpan.metacpan.org/authors/id/E/ET/ETHER/Moose-${version}.tar.gz)

build() {
	cd Moose-$version

	perl Makefile.PL

	make OPTIMIZE="$CFLAGS"
	make install DESTDIR=$PKG

	find $PKG  -name perllocal.pod  \
		-o -name "*.bs"         \
		-o -name .packlist      \
		-o -name autosplit.ix   \
	| xargs rm -f

	find $PKG -depth -type d -empty -delete
}
