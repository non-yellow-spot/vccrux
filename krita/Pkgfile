# Description: The full-featured free digital painting studio
# URL:         https://krita.org/
# Maintainer:  Stamatin Cristina, dear dot volgk at gmail dot com
# Depends on:  boost eigen3 exiv2 fftw gsl karchive kcompletion kconfig kcoreaddons kguiaddons ki18n kitemmodels kitemviews kwidgetsaddons kwindowsystem libbsd openexr pulseaudio quazip

name=krita
version=4.4.1
release=2
source=(https://download.kde.org/stable/$name/${version:0:5}/$name-$version.tar.gz)

build() {
	cd $name-$version

	mkdir build
	cd build

	cmake .. -DCMAKE_INSTALL_PREFIX=/usr \
		 -DBUILD_TESTING=OFF         \
		 -DBUILD_KRITA_QT_DESIGNER_PLUGINS=ON

	make VERBOSE=1
	make DESTDIR=$PKG install

	rm $PKG/usr/share/color/icc/krita/README
	rm $PKG/usr/share/krita/bundles/README
	rm -r $PKG/usr/share/locale/
}
