# Description:  Terminus ttf fonts
# URL:          https://files.ax86.net/terminus-ttf/
# Maintainer:   Alexandr Savca, drop at chinarulezzz dot fun
# Depends on:   fontconfig

name=ttf-terminus-font
version=4.47.0
release=1
source=(https://files.ax86.net/terminus-ttf/files/$version/terminus-ttf-$version.zip)

build() {
	cd terminus-ttf-$version

	install -Dm644 TerminusTTF-$version.ttf \
		$PKG/usr/share/fonts/X11/TTF/Terminus/TerminusTTF-$version.ttf
	install -Dm644 TerminusTTF-Bold\ Italic-$version.ttf \
		$PKG/usr/share/fonts/X11/TTF/Terminus/TerminusTTF-Bold\ Italic-$version.ttf
	install -Dm644 TerminusTTF-Bold-$version.ttf \
		$PKG/usr/share/fonts/X11/TTF/Terminus/TerminusTTF-Bold-$version.ttf
	install -Dm644 TerminusTTF-Italic-$version.ttf \
		$PKG/usr/share/fonts/X11/TTF/Terminus/TerminusTTF-Italic-$version.ttf
}
