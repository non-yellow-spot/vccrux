# Description:  Papirus Icon Theme
# URL:          https://github.com/PapirusDevelopmentTeam/papirus-icon-theme
# Maintainer:   Alexandr Savca, alexandr dot savca89 at gmail dot com
# Depends on:   adwaita-icon-theme

name=papirus-icon-theme
version=20200702
release=1
source=(https://github.com/PapirusDevelopmentTeam/$name/archive/$version/$name-$version.tar.gz)

build() {
	cd $name-$version

	make DESTDIR=$PKG install

	find $PKG -name AUTHORS -name README -exec rm '{}' \+
}
