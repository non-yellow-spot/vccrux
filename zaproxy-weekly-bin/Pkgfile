# Description:  OWASP Zed Attack Proxy (Weekly Build)
# URL:          https://github.com/zaproxy/zaproxy
# Maintainer:   Alexandr Savca, drop at chinarulezzz dot fun
# Depends on:   jdk

name=zaproxy-weekly-bin
version=2020-09-08
release=2
source=(https://github.com/zaproxy/zaproxy/releases/download/w${version}/ZAP_WEEKLY_D-${version}.zip
	zaproxy-weekly.sh)

build() {
	cd ZAP_D-${version}

	install -d $PKG/usr/share/${name/-bin}

	rm -rf zap.bat README plugin/Readme.txt license/ lang/
	cp -pR . $PKG/usr/share/${name/-bin}

	install -Dm 755 $SRC/${name/-bin}.sh $PKG/usr/bin/${name/-bin}
}
