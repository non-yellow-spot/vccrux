# Description:  Slender typeface for code, from code
# Maintainer:   Alexandr Savca, drop at chinarulezzz dot fun
# URL:          https://typeof.net/Iosevka/
# Depends on:   xorg-mkfontscale fontconfig

name=xorg-font-iosevka-ttf
version=3.4.6
release=1
source=(https://github.com/be5invis/Iosevka/releases/download/v${version}/ttf-iosevka-${version}.zip
	https://github.com/be5invis/Iosevka/releases/download/v${version}/ttf-iosevka-aile-${version}.zip
	https://github.com/be5invis/Iosevka/releases/download/v${version}/ttf-iosevka-curly-${version}.zip
	https://github.com/be5invis/Iosevka/releases/download/v${version}/ttf-iosevka-curly-slab-${version}.zip
	https://github.com/be5invis/Iosevka/releases/download/v${version}/ttf-iosevka-etoile-${version}.zip
	https://github.com/be5invis/Iosevka/releases/download/v${version}/ttf-iosevka-fixed-${version}.zip
	https://github.com/be5invis/Iosevka/releases/download/v${version}/ttf-iosevka-fixed-curly-${version}.zip
	https://github.com/be5invis/Iosevka/releases/download/v${version}/ttf-iosevka-fixed-curly-slab-${version}.zip
	https://github.com/be5invis/Iosevka/releases/download/v${version}/ttf-iosevka-fixed-slab-${version}.zip
	https://github.com/be5invis/Iosevka/releases/download/v${version}/ttf-iosevka-slab-${version}.zip
	https://github.com/be5invis/Iosevka/releases/download/v${version}/ttf-iosevka-sparkle-${version}.zip
	https://github.com/be5invis/Iosevka/releases/download/v${version}/ttf-iosevka-term-${version}.zip
	https://github.com/be5invis/Iosevka/releases/download/v${version}/ttf-iosevka-term-curly-${version}.zip
	https://github.com/be5invis/Iosevka/releases/download/v${version}/ttf-iosevka-term-curly-slab-${version}.zip
	https://github.com/be5invis/Iosevka/releases/download/v${version}/ttf-iosevka-term-slab-${version}.zip
)

build() {
	install -m 0755 -d "${PKG}/usr/share/fonts/X11/TTF"
	install -m 0644 -t "${PKG}/usr/share/fonts/X11/TTF" ttf/*.ttf
}
