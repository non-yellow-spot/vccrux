# Description: Flash tool for MediaTek devices
# URL:         https://spflashtools.com/linux
# Maintainer:  Stamatin Cristina, dear dot volgk at gmail dot com
# Depends on:  brotli fontconfig glib libbsd libpng12 xorg-libsm xorg-libxext xorg-libxrender

name=sp-flash-tool-bin
version=5.1952
release=1
source=(SP_Flash_Tool_v${version}_Linux.zip
	flash_tool.sh)

build () {
	cd SP_Flash_Tool_v${version}_Linux

	install -d $PKG/usr/share/flash-tool

	chmod +x flash_tool

	rm -rf 99-ttyacms.rules Credits.txt Driver 'How to Use.url' 'Official Website.url'
	cp -pR . $PKG/usr/share/flash-tool

	install -Dm755 $SRC/flash_tool.sh $PKG/usr/bin/flash-tool
}
