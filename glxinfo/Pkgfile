# Description: mesa 3D demos
# URL:         https://www.mesa3d.org/
# Maintainer:  Stamatin Cristina, dear dot volgk at gmail dot com
# Depends on:  glew glu

name=glxinfo
version=8.4.0
release=1
source=(https://mesa.freedesktop.org/archive/demos/mesa-demos-$version.tar.bz2)

build() {
	cd mesa-demos-$version

	./configure --prefix=/usr

	make -C src/xdemos/ glxinfo glxgears

	install -d $PKG/usr/bin
	install -m 0755 -t $PKG/usr/bin src/xdemos/glx{gears,info}
}
