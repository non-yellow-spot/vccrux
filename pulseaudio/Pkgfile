# Description: Sound system for POSIX OSes
# URL:         http://www.freedesktop.org/wiki/Software/PulseAudio/
# Maintainer:  Alexandr Savca, alexandrsavca89 at gmail dot com
# Depends on:  bluez consolekit gst-plugins-base intltool libsndfile libtool sbc xorg-libxtst

name=pulseaudio
version=13.99.3
release=2
source=(https://freedesktop.org/software/$name/releases/$name-$version.tar.xz) 

build() {
	cd $name-$version

	sed -i 's/ -pipe / /' configure.ac
	autoreconf -f -i

	./configure \
		--prefix=/usr                 \
		--libexecdir=/usr/lib/$name   \
		--sysconfdir=/etc             \
		--enable-bluez5               \
		--disable-bluez4              \
		--disable-default-build-tests \
		--disable-gtk3                \
		--disable-rpath               \
		--disable-tcpwrap             \
		--disable-hal-compat          \
		--disable-openssl

	make V=1
	make -j1 DESTDIR=$PKG install

	rm -r $PKG/usr/share/locale
}
