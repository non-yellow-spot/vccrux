# Description: Customizable and lightweight notification-daemon (branch:master)
# URL:         https://github.com/knopwob/dunst
# Maintainer:  Alexandr Savca, alexandrsavca89 at gmail dot com
# Depends on:  dbus gdk-pixbuf git libxdg-basedir pango xorg-libxinerama xorg-libxrandr xorg-libxscrnsaver

name=dunst-scm
version=$(date +%Y%m%d)
release=1

download_git() {
	if [[ -d $PKGMK_SOURCE_DIR/$name ]]; then
		git -C $PKGMK_SOURCE_DIR/$name fetch --depth=1
		git -C $PKGMK_SOURCE_DIR/$name clean -f
		git -C $PKGMK_SOURCE_DIR/$name reset --hard origin/$2
	else
		git -C $PKGMK_SOURCE_DIR clone --depth=1 $1 -b $2 $name
	fi

	cp -r $PKGMK_SOURCE_DIR/$name $PKGMK_WORK_DIR/src/$name
}

build() {
	download_git https://github.com/knopwob/${name/-scm} master
	cd $name

	make VERSION=$(git -C $PKGMK_SOURCE_DIR/$name rev-parse --short HEAD)
	make DESTDIR=$PKG PREFIX=/usr install

	rm -rf $PKG/usr/share/dunst
}
