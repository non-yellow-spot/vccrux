# Description: Fast and full-featured SSL scanner
# URL:         https://github.com/nabla-c0d3/sslyze
# Maintainer:  Alexandr Savca, drop at chinarulezzz dot fun
# Depends on:  python3 python3-pip

name=sslyze
version=3.0.8
release=1
source=(https://github.com/nabla-c0d3/sslyze/archive/$version/$name-$version.tar.gz
	sslyze)

build() {
	cd $name-$version

	# Install files in /opt
	install -dm755 $PKG/opt/sslyze
	/usr/bin/pip3 install . --target $PKG/opt/sslyze/

	# Create an indirect launcher in /opt/bin
	install -Dm755 $SRC/sslyze $PKG/opt/bin/sslyze

	# Remove junk files
	rm -rf $PKG/opt/sslyze/*.dist-info
}
