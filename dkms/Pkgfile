# Description: Dynamic Kernel Modules System
# URL:         https://github.com/dell/dkms
# Maintainer:  Alexandr Savca, alexandrsavca89 at gmail dot com

name=dkms
version=2.8.2
release=1
source=(https://github.com/dell/$name/archive/v$version/$name-$version.tar.gz
	dkms-remove)

build() {
	cd $name-$version

	make install \
		DESTDIR=$PKG        \
		SBIN=$PKG/usr/sbin  \
		KCONF=$SRC/kconf    \
		BASHDIR=$PKG/usr/share/bash-completion/completions

	install -m755 $SRC/dkms-remove $PKG/usr/sbin/dkms-remove
}
