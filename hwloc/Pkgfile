# Description: The Portable Hardware Locality 
# URL:         http://www.multiprecision.org/
# Maintainer:  Alexandr Savca, drop at chinarulezzz dot fun

name=hwloc
version=2.2.0
release=1
source=(https://download.open-mpi.org/release/$name/v${version%.*}/$name-$version.tar.gz)

build() {
	cd $name-$version

	./configure \
		--prefix=/usr \
		--sysconfdir=/etc \
		--enable-netloc
	make V=1
	make DESTDIR=$PKG install

	rm -rf $PKG/usr/share/doc
	rm -rf $PKG/usr/share/hwloc/hwloc-ps.www

	# remove unused systemd service file
	rm -f  $PKG/usr/share/hwloc/hwloc-dump-hwdata.service
}
