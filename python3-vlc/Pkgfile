# Description: VLC bindings for python
# URL:         https://pypi.org/project/python-vlc
# Maintainer:  Stamatin Cristina, dear dot volgk at gmail dot com
# Depends on:  python3-setuptools

name=python3-vlc
version=3.0.11115
release=2
source=(https://files.pythonhosted.org/packages/source/p/python-${name#*-}/python-${name#*-}-$version.tar.gz)

build() {
	cd python-${name#*-}-$version

	/usr/bin/python3 setup.py build
	/usr/bin/python3 setup.py install \
		--prefix=/usr                 \
		--root=$PKG                   \
		--optimize=1
}
