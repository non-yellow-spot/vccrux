# Description: Stateful programmatic web browsing
# URL:         https://pypi.python.org/pypi/mechanize/
# Maintainer:  Alexandr Savca, alexandrsavca89 at gmail dot com
# Depends on:  python3-setuptools python3-htm5lib

name=python3-mechanize
version=0.4.5
release=2
source=(https://files.pythonhosted.org/packages/source/${name:8:1}/${name#*-}/${name#*-}-$version.tar.gz
	0001-use-html5lib-parser-by-default.patch)

build() {
	cd ${name##python3-}-$version

	patch -p1 < $SRC/0001-use-html5lib-parser-by-default.patch

	python3 setup.py build
	python3 setup.py install --prefix=/usr --root=$PKG --optimize=1
}
