# Description:  Powerful interactive packet manipulation program written in Python
# URL:          https://github.com/secdev/scapy
# Maintainer:   Alexandr Savca, drop at chinarulezzz dot fun
# Depends on:   tcpdump python3-setuptools

name=scapy
version=2.4.4
release=1
source=(https://github.com/secdev/$name/archive/v$version/$name-$version.tar.gz)

build() {
	cd $name-$version

	python3 setup.py build
	python3 setup.py install \
		--prefix=/usr \
		--root=$PKG \
		--optimize=1

	rm -rf $PKG/usr/lib/python3.7/site-packages/scapy-*-py3.7.egg-info
}
