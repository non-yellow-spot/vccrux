# Description:  Returning the equivalent of ${^GLOBAL_PHASE} eq 'DESTRUCT' for older perls
# URL:          https://metacpan.org/pod/Devel::GlobalDestruction
# Maintainer:   Alexandr Savca, drop at chinarulezzz dot fun
# Depends on:   p5-glib

name=p5-devel-globaldestruction
version=0.14
release=1
source=(https://cpan.metacpan.org/authors/id/H/HA/HAARG/Devel-GlobalDestruction-${version}.tar.gz)

build() {
	cd Devel-GlobalDestruction-$version

	perl Makefile.PL

	make OPTIMIZE="$CFLAGS"
	make install DESTDIR=$PKG

	find $PKG  -name perllocal.pod  \
		-o -name "*.bs"         \
		-o -name .packlist      \
		-o -name autosplit.ix   \
	| xargs rm -f

	find $PKG -depth -type d -empty -delete
}
