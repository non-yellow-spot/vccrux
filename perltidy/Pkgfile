# Description:  Indents and reformat Perl scripts
# URL:          https://metacpan.org/release/Perl-Tidy
# Maintainer:   Alexandr Savca, drop at chinarulezzz dot fun

name=perltidy
version=20200907
release=1
source=(https://cpan.metacpan.org/authors/id/S/SH/SHANCOCK/Perl-Tidy-$version.tar.gz)

build() {
	cd Perl-Tidy-$version

	perl Makefile.PL

	make
	make DESTDIR=$PKG install

	# Remove perlcrap
	find $PKG  -name perllocal.pod  \
		-o -name "*.bs"         \
		-o -name .packlist      \
		-o -name autosplit.ix   \
	| xargs rm -f

	# Remove empty directories
	find $PKG -depth -type d -empty -delete
}
