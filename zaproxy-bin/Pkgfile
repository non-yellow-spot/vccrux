# Description:  The OWASP Zed Attack Proxy (Stable)
# URL:          https://github.com/zaproxy/zaproxy
# Maintainer:   Alexandr Savca, alexandr dot savca89 at gmail dot com
# Depends on:   jdk

name=zaproxy-bin
version=2.8.0
release=2
source=(https://github.com/zaproxy/zaproxy/releases/download/v${version}/ZAP_${version}_Linux.tar.gz
	zaproxy.sh)

build() {
	cd ZAP_${version}

	install -d $PKG/usr/share/${name/-bin}

	rm -rf zap.bat README plugin/Readme.txt license/ lang/
	cp -pR . $PKG/usr/share/${name/-bin}

	install -Dm 755 $SRC/${name/-bin}.sh $PKG/usr/bin/${name/-bin}
}
