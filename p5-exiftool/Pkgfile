# Description: Read and write meta information in files
# URL:         https://metacpan.org/pod/distribution/Image-ExifTool/exiftool
# Maintainer:  Alexandr Savca, alexandrsavca89 at gmail dot com

name=p5-exiftool
version=12.00
release=1
source=(https://cpan.metacpan.org/authors/id/E/EX/EXIFTOOL/Image-ExifTool-$version.tar.gz)

build() {
	cd Image-ExifTool-$version

	perl Makefile.PL

	make
	make install DESTDIR=$PKG

	# remove junk
	find $PKG  -name perllocal.pod  \
		-o -name "*.bs"         \
		-o -name .packlist      \
		-o -name autosplit.ix   \
		-o -name README         \
	| xargs rm -f

	# remove empty dirs
	find $PKG -depth -type d -empty -delete
}
